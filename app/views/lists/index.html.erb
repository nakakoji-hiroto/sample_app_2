<h1>投稿一覧</h1>

<% @lists.each do |list| %>
  <p><span>No.</span><%= list.id %></p>
  <p>タイトル</p>
  <%= list.title %>
  <p>本文</p>
  <%= list.body %>
  
  <p>画像</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
<% end %>